{% extends 'layout.html.twig' %}

{% block main %}
        {# crée un form avec une methode post pour renvoyé la validation #}
        <form action="{{ path('login') }}" method="post">

        {# creation de l'espace de saisi du pseudo #}
        <label for="username">Pseudo:</label>
        <input type="text" name="_username" id="username">

         {# creation de l'espace de saisis du pseudo #}
        <label for="password">Mot De Passe:</label>
        <input type="password" name="_password" id="password">

        {# creation du bouton de validation des saisis #}
        <input type="submit" value="Valider" name="valider">
        </form>
{% endblock %}

{% block title %} Login {% endblock %}